# Django configuration
DJANGO_ENV=production
DJANGO_SECRET_KEY=change-this-to-a-secure-key-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=medical-portal.example.com,www.medical-portal.example.com

# Database configuration
POSTGRES_DB=medical_portal
POSTGRES_USER=medical_user
POSTGRES_PASSWORD=change-this-to-secure-password
